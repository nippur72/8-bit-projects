macro simk const, const, mem
   lda #{1}
   jsr read_c64_simple
   eor #{2}
   if zero then
      ld {3}, #KEY_PRESSED
   else
      ld {3}, #KEY_RELEASED
   end if
end macro

macro is_pressed const, const
   lda #{1}
   sta $dc00	    ; query keyboard row on CIA1 port a 
   lda $dc01       ; retrieve the keyboard row from CIA 1 port b      
   eor #{2}
end macro
